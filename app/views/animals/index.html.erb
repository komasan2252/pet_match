<p id="notice"><%= notice %></p>

<h1>🐶保護犬保護猫一覧😺</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Species</th>
      <th>Age</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td>
          <% if animal.image.attached? %>
            <%= image_tag animal.image.variant(resize_to_limit: [400, 400]) %>
          <% else %>  
            画像なし
          <% end %>
        </td>
        <td><%= animal.name %></td>
        <td><%= animal.species %></td>
        <td><%= animal.age %></td>
        <td><%= animal.description %></td>
        <td><%= link_to 'Show', animal %></td>
       
      <% if user_signed_in? && current_user.admin? %>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

