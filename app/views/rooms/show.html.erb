<h2>チャットルーム</h2>

<div style="border: 1px solid #ccc; padding: 10px; height: 300px; overflow-y: scroll;">
  <% @messages.each do |message| %>
    <div>
      <strong><%= message.user.email %>:</strong>
      <%= message.content %>
    </div>
  <% end %>
</div>

<%= form_with(model: [@room, @message], local: true) do |form| %>
  <div>
    <%= form.label :content, "メッセージ" %><br>
    <%= form.text_field :content, style: "width: 80%;" %>
    <%= form.submit "送信" %>
  </div>
<% end %>

<%= link_to "戻る", root_path %>